{
  "manifest_version": 3,
  "name": "akfiltre",
  "version": "1.0",
  "description": "aktroll entry'lerini otomatik olarak gizler",
  "permissions": ["scripting", "activeTab", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "akfiltre"
  },
  "content_scripts": [
    {
      "matches": ["*://eksisozluk.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}